@page "{restaurantId}"
@model OdeToFood.Pages.Restaurants.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete!</h2>
<div class="alert alert-danger">
    Are you sure you want to delete @Model.Restaurant.Name?
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Yes!</button>
    @*Cancel</a> To cancel the  delete and move back to list page using asp-page="List"*@
<a asp-page="List" class="btn btn-outline-primary">Cancel</a>
</form>